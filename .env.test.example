# Test Environment Configuration
NODE_ENV=test

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=strellerminds_test
DB_SYNCHRONIZE=true
DB_DROP_SCHEMA=true
DB_LOGGING=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Test)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=test
MAIL_PASS=test
MAIL_FROM=test@strellerminds.com
MAIL_TRANSPORT=smtp
EMAIL_TEMPLATES_DIR=src/email/templates
EMAIL_TESTING_MODE=true

# AWS Configuration (Mock)
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=test-bucket
AWS_CLOUDFRONT_DISTRIBUTION_ID=test-distribution
AWS_CLOUDFRONT_DOMAIN=test.cloudfront.net

# Stripe Configuration (Test)
STRIPE_SECRET_KEY=sk_test_test_key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_test_key

# Stellar Configuration (Test)
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_ISSUER_SECRET=test-issuer-secret
STELLAR_DISTRIBUTION_SECRET=test-distribution-secret

# Application Configuration
APP_NAME=StrellerMinds Test
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
API_PREFIX=api
API_VERSION=v1
PORT=3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./test-uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,mp4,webm

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL=error
LOG_FORMAT=simple

# Testing Specific
TEST_TIMEOUT=30000
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/strellerminds_test
TEST_REDIS_URL=redis://localhost:6379/1

# Mock Services
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true
MOCK_PAYMENT_SERVICE=true
MOCK_STORAGE_SERVICE=true
MOCK_STELLAR_SERVICE=true

# Performance Testing
LOAD_TEST_DURATION=60
LOAD_TEST_USERS=50
LOAD_TEST_RAMP_UP=30

# Security Testing
SECURITY_SCAN_ENABLED=true
VULNERABILITY_THRESHOLD=medium

# Accessibility Testing
A11Y_TESTING_ENABLED=true
A11Y_STANDARDS=WCAG2AA

# Visual Testing
VISUAL_TESTING_ENABLED=true
VISUAL_THRESHOLD=0.2

# Browser Testing
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720

# API Testing
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Database Testing
DB_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=10000

# Cache Testing
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Monitoring
METRICS_ENABLED=false
TRACING_ENABLED=false
HEALTH_CHECK_ENABLED=true

# Feature Flags
FEATURE_VIDEO_STREAMING=true
FEATURE_LIVE_CHAT=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# Third Party Services (Test)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
FACEBOOK_APP_ID=test-facebook-app-id
FACEBOOK_APP_SECRET=test-facebook-app-secret
APPLE_CLIENT_ID=test-apple-client-id
APPLE_TEAM_ID=test-apple-team-id
APPLE_KEY_ID=test-apple-key-id

# Notification Services (Test)
FIREBASE_PROJECT_ID=test-project
FIREBASE_PRIVATE_KEY=test-private-key
FIREBASE_CLIENT_EMAIL=test@test.iam.gserviceaccount.com
PUSH_NOTIFICATION_ENABLED=false

# Analytics (Test)
GOOGLE_ANALYTICS_ID=UA-TEST-1
MIXPANEL_TOKEN=test-mixpanel-token
ANALYTICS_ENABLED=false

# Error Tracking (Test)
SENTRY_DSN=https://test@sentry.io/test
ERROR_TRACKING_ENABLED=false

# Content Delivery
CDN_URL=https://test-cdn.example.com
STATIC_FILES_URL=http://localhost:3000/static

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de
I18N_FALLBACK_LANGUAGE=en

# Time Zone
DEFAULT_TIMEZONE=UTC
TIMEZONE_DETECTION=true

# Session Configuration
SESSION_SECRET=test-session-secret
SESSION_TIMEOUT=3600000
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_HEADERS=Content-Type,Authorization

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Request Validation
VALIDATION_WHITELIST=true
VALIDATION_FORBID_NON_WHITELISTED=true
VALIDATION_SKIP_MISSING_PROPERTIES=false

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=docs
SWAGGER_TITLE=StrellerMinds API Test
SWAGGER_DESCRIPTION=API documentation for testing
SWAGGER_VERSION=1.0.0

# Development Tools
DEBUG_MODE=false
PROFILING_ENABLED=false
MEMORY_MONITORING=false
