{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": "test/integration/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.entity.ts",
    "!src/main.ts"
  ],
  "coverageDirectory": "./coverage/integration",
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/test/setup/jest.setup.ts"],
  "moduleNameMapping": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  },
  "testTimeout": 60000,
  "maxWorkers": 1,
  "detectOpenHandles": true,
  "forceExit": true,
  "verbose": true,
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "publicPath": "./coverage/integration",
        "filename": "integration-test-report.html",
        "openReport": false,
        "pageTitle": "StrellerMinds Integration Test Report"
      }
    ],
    [
      "jest-junit",
      {
        "outputDirectory": "./coverage/integration",
        "outputName": "junit-integration.xml",
        "suiteName": "Integration Tests"
      }
    ]
  ],
  "globalSetup": "<rootDir>/test/setup/integration-setup.ts",
  "globalTeardown": "<rootDir>/test/setup/integration-teardown.ts"
}
